<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>philm.io</title>
    <meta name="description" content="Ce site sert aux visiteurs à programmer leur prochaine visite au cinéma et à l'administrateur de gérer un cinéma."/>
    <link href="./css/normalize.css" rel="stylesheet">
    <link href="http://localhost:8000/css/style.css" rel="stylesheet" type="text/css">
    <link href="./images/favicon.ico" rel="shortcut icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <meta name="robots" content="noindex, nofollow">
</head>
<body>
  <% if(loggedin){ %>
    <header>
        <h1>
            <img id="menuButton" src="./images/menu.svg" alt="icon_burger_menu">  
            <a href="/">application gestion de cinéma.</a>
        </h1>
    </header>
  <% } else{ %>  
    <header>
        <h1>
          <img id="menuButton" src="./images/menu.svg" alt="icon_burger_menu">  
            <a href="/">cinéma - philm.io</a>
        </h1>
    </header>
  <% } %>
    <main>
      <% if(loggedin){ %>
        <section style="margin-bottom: 5rem;">
          <h1>salles de cinéma</h1>
            <a href="/salles/add" class="ajouter">Ajouter une salle</a><br /><br />    
          <div class="rTable">
            <div class="rTableRow">
              <div class="rTableHead">Nom de la salle</div>
              <div class="rTableHead">3D</div>
                <div class="rTableHead">Actions</div>   
            </div> 
            <% for (let i = 0 ;  i < salles.length ; i++) { %>
            <div class="rTableRow">
              <div class="rTableCell"><%=salles[i].name%></div>
              <div class="rTableCell">
                <input style="pointer-events:none" type="checkbox" name="extra" <% if(salles[i].extra === 1){ %> checked <%}%></div>
              </div>
                <div class="rTableCell">
                  <a href="/salles/update/<%= salles[i].id %>" class="modifier">Modifier</a>
                  <a onclick="return confirm('Veuillez cliquer sur OK si vous voulez supprimer cet élément')" href="/salles/delete/<%= salles[i].id %>" class="supprimer">Supprimer</a>
                </div>   
              <% } %>
            </div>
      <% } %>
          </div>
        </section>
    </main>
    <nav id="mainMenu">
      <a href="/">accueil</a>
      <a href="/films">films</a>
      <a href="/seances">séances</a>
      <% if(loggedin){ %>
        <a href="/categories">genres</a>
        <a href="/salles">salles</a>
        <a href="/user">users</a>
        <a href="/ressources">ressources</a>
        <a href="https://github.com/gomst070/node_gestioncinema">github</a>
        <a href="/logout">deconnexion</a>
      <% } else{ %>  
        <a href="/login">login</a>
      <% } %>
      </nav>  
    <footer>2020, copyright © philm.io</footer>
    <div id="overlay"></div>
    <script src="./script/drawer.js" type="text/javascript">
    </script>
</body>
</html>

